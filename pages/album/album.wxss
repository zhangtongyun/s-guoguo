/* pages/album/album.wxss */

.product-card {
  width: 50%;
  display: inline-block;
  text-align: center;
  margin-bottom: 26rpx;
}

.product-cover {
  height: 350rpx;
  width: 350rpx;
}
.product-title,
.product-price
{
  width: 350rpx;
  white-space:nowrap;
  display: block;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-left: 30rpx;
}

.product-title {
  font-size: 9pt;
}
.product-price {
  font-size: 10pt;
}
